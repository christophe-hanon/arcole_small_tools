<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Inherit Account Move Form View -->
    <record id="view_move_form_inherit_arcole_tags" model="ir.ui.view">
        <field name="name">account.move.form.inherit.arcole.tags</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="arcole_account_tag_ids" widget="many2many_tags"/>
                <field name="arcole_extra_text"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/list/field[@name='price_total']" position="after">
                <field name="arcole_account_tag_ids" widget="many2many_tags" optional="hide"/>
                <field name="arcole_extra_text" optional="hide"/>
            </xpath>
        
        </field>
    </record>

    <!-- Inherit Account Move Tree View -->
    <record id="view_move_tree_inherit_arcole_tags" model="ir.ui.view">
        <field name="name">account.move.tree.inherit.arcole.tags</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total_signed']" position="after">
                <field name="arcole_account_tag_ids" widget="many2many_tags"/>
                <field name="arcole_extra_text" optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit Invoice Tree View -->
    <record id="view_invoice_tree_inherit_arcole_tags" model="ir.ui.view">
        <field name="name">account.move.tree.inherit.arcole.tags</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_residual_signed']" position="after">
                <field name="arcole_account_tag_ids" widget="many2many_tags"/>
                <field name="arcole_extra_text" optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit Account Move Tree View -->

    <record id="view_move_tree_inherit_arcole_tags" model="ir.ui.view">
        <field name="name">account.move.tree.inherit.arcole.tags</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_total_signed']" position="after">
                <field name="arcole_account_tag_ids" widget="many2many_tags"/>
     
                <field name="arcole_extra_text" optional="show"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit Account Move Line Form View (embedded in move form) -->
    <record id="view_move_line_form_inherit_arcole_tags" model="ir.ui.view">
        <field name="name">account.move.line.form.inherit.arcole.tags</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='account_id']" position="after">
                <field name="arcole_account_tag_ids" widget="many2many_tags"/>
                <field name="arcole_extra_text"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit Account Move Line Tree View -->
    <record id="view_move_line_tree_inherit_arcole_tags" model="ir.ui.view">
        <field name="name">account.move.line.tree.inherit.arcole.tags</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='balance']" position="after">
                  <field name="arcole_account_tag_ids" widget="many2many_tags"/>
                <field name="arcole_extra_text" optional="show"/>
            </xpath>
        </field>
    </record>

</odoo>
